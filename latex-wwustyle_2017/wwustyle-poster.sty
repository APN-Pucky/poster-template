\long\def\posterfbox#1{%
  \leavevmode
  \setbox\@tempboxa\hbox{%
    \color@begingroup
      \kern\fboxsep{#1}\kern\fboxsep
    \color@endgroup}%
  \poster@frameb@x\relax}

\def\poster@frameb@x#1{%
  \@tempdima\fboxrule
  \advance\@tempdima\fboxsep
  \advance\@tempdima\dp\@tempboxa
  \hbox{%
    \lower\@tempdima\hbox{%
      \vbox{%
    \color@begingroup
    \color{maincolor}
        \hrule\@height\fboxrule
    \color@endgroup
        \hbox{%
    \color@begingroup
    \color{maincolor}
          \vrule\@width\fboxrule
    \color@endgroup
          #1%
          \vbox{%
            \vskip\fboxsep
            \box\@tempboxa
            \vskip\fboxsep}%
          #1%
    \color@begingroup
    \color{maincolor}
          \vrule\@width\fboxrule
    \color@endgroup
          }%
    \color@begingroup
    \color{maincolor}
        \hrule\@height\fboxrule
    \color@endgroup
        }%
                          }%
        }%
}

